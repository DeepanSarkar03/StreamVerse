{
  "manifest_version": 3,
  "name": "StreamVerse Turbo Downloader",
  "version": "1.0",
  "description": "Captures authentication cookies for high-speed downloads",
  "permissions": [
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "https://*.google.com/*",
    "https://*.googleusercontent.com/*",
    "https://*.googlevideo.com/*",
    "https://*.youtube.com/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*",
    "http://4.213.170.162:*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:*/*", "http://127.0.0.1:*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
